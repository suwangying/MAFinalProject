<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/colorBackground">

    <!-- Title -->
    <TextView
        android:id="@+id/tvAddLocationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Safe Location"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Location Name Input -->
    <EditText
        android:id="@+id/etLocationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Location Name"
        android:background="@drawable/rounded_edittext_bg"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colorHint"
        app:layout_constraintTop_toBottomOf="@id/tvAddLocationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Address Input jj-->
    <EditText
        android:id="@+id/etAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Address or Coordinates"
        android:background="@drawable/rounded_edittext_bg"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colorHint"
        app:layout_constraintTop_toBottomOf="@id/etLocationName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Location"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/etAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="@color/purple_700"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btnSaveLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
